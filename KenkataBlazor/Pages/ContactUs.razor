@page "/contact"

<div class="container-bg-banner">
    <Container>
        <Row Class="d-flex">
            <Column>
                <Paragraph Class="fs-3 mt-5 mb-5" id="theme-blue-text">Contact</Paragraph>
            </Column>
            <Column Class="fs-4">
                <Paragraph Alignment="TextAlignment.Right" Class="text-white mt-5 mb-5"><span id="theme-blue-text">Home</span> / Contact</Paragraph>
            </Column>
        </Row>
    </Container>
</div>
<div class="contactmap mb-3">
    <GoogleMaps />
</div>
<Container Class="contactinfo">
    <Row Class="flex-lg-row justify-content-between p-5">
        <Column ColumnSize="ColumnSize.Is4.OnTablet.IsAuto.OnWidescreen">
            <Row Class="justify-content-start p-sm-0">
                <Column ColumnSize="ColumnSize.Is2.OnMobile.Is1.OnDesktop.Is10.OnTablet">
                    <span id="theme-blue-text">
                        <Icon Name="IconName.Map" />
                    </span>
                </Column>
                <Column ColumnSize="ColumnSize.Is10.OnMobile.Is2.OnTablet" Class="text-nowrap">
                    <Paragraph>
                        Solna Business Park
                        <br>
                        Feni-2500, Stockholm
                    </Paragraph>
                </Column>
            </Row>
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.IsAuto.OnWidescreen">
            <Row Class="justify-content-start p-sm-0">
                <Column ColumnSize="ColumnSize.Is2.OnMobile.Is1.OnDesktop.Is10.OnTablet">
                    <span id="theme-blue-text">
                        <Icon Name="IconName.Phone" />
                    </span>
                </Column>
                <Column>
                    <Paragraph>
                        +880-123456789 <br />
                        +880-123456789
                    </Paragraph>
                </Column>
            </Row>
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.IsAuto.OnWidescreen">
            <Row Class="justify-content-start p-sm-0">
                <Column ColumnSize="ColumnSize.Is2.OnMobile.Is1.OnDesktop.Is10.OnTablet">
                    <span id="theme-blue-text">
                        <Icon Name="IconName.Mail" />
                    </span>
                </Column>
                <Column>
                    <Paragraph>
                        vanilla@website.com <br />
                        info@website.com
                    </Paragraph>
                </Column>
            </Row>
        </Column>
    </Row>
    <hr id="theme-blue-divider" class="p-0"/>
    <Row Class="p-5 flex-row">
        <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnTablet">
            <Heading Size="HeadingSize.Is4" id="theme-blue-text" Class="pb-5">Get in Touch</Heading>
            <Paragraph>
                We have world-class, flexible support via live chat, email and phone. We guarantee that you’ll be able to have any issue resolved within 24 hours. You can contact support immediately here.
            </Paragraph>
            <Paragraph Class="font-weight-bold">
                Follow us
            </Paragraph>
            <ul class="list-group list-group-horizontal shadow-none pb-2">
                <a href="#"><img src="../img/twitter.svg" class="social-media-icons-footer"></a>
                <a href="#"><img src="../img/facebook.svg" class="social-media-icons-footer"></a>
                <a href="#"><img src="../img/instagram.svg" class="social-media-icons-footer"></a>
                <a href="#"><img src="../img/youtube.svg" class="social-media-icons-footer"></a>
            </ul>
        </Column>
        <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnTablet">
            <Form>
                <Select @bind-SelectedValue="@SelectedValue">
                    <SelectItem Value="0">Product category</SelectItem>
                    <SelectItem Value="1">1</SelectItem>
                    <SelectItem Value="2">2</SelectItem>
                    <SelectItem Value="3">3</SelectItem>
                    <SelectItem Value="4">4</SelectItem>
                </Select>
                <Field Class="pt-3">
                    <TextEdit Placeholder="Name" Class="form-control-contact"/>
                </Field>
                <Field>
                    <TextEdit Placeholder="Email" Class="form-control-contact"/>
                </Field>
                <Field>
                    <TextEdit Placeholder="Subject" Class="form-control-contact"/>
                </Field>
                <Field>
                    <textarea class="form-control" rows="6" placeholder="Message"></textarea>
                </Field>
                <Button Block="true" Color="Color.Info" class="btn btn-rounded-blue">SEND MESSAGE</Button>
            </Form>
        </Column>
    </Row>
</Container>

@code {
    string SelectedValue;
}

    